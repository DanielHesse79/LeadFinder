# LeadFinder Environment Configuration Template
# Copy this file to env.development and fill in your actual API keys

# Development Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True
LOG_LEVEL=DEBUG

# API Keys (REPLACE WITH YOUR ACTUAL KEYS)
SERPAPI_KEY=your_serpapi_key_here
# Get free Semantic Scholar API key from: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key_here
SWECRIS_API_KEY=VRSwecrisAPI2025-1
CORDIS_API_KEY=your_cordis_key_here
NIH_API_KEY=your_nih_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:latest
OLLAMA_TIMEOUT=180

# AutoGPT Configuration
AUTOGPT_ENABLED=True
AUTOGPT_MODEL=mistral:latest
AUTOGPT_TIMEOUT=1800

# Flask Configuration
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=5051

# Research Configuration
RESEARCH_MAX_RESULTS=50
RESEARCH_TIMEOUT=30
DEFAULT_RESEARCH_QUESTION="epigenetics and pre-diabetes"

# External APIs
ORCID_BASE_URL=https://pub.orcid.org/v3.0
PUBMED_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils

# Logging
LOG_FILE=leadfinder.log

# Performance
REQUEST_POOL_SIZE=10
REQUEST_TIMEOUT=10
MAX_TEXT_LENGTH=1000

# Database Connection Pool
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_CONNECTION_TIMEOUT=30
DB_POOL_HEALTH_CHECK_INTERVAL=300

# Cache Configuration
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=300
CACHE_CLEANUP_INTERVAL=60

# Export settings
EXPORT_FOLDER=exports
SCIHUB_FOLDER=scihub_pdfs

# RunPod.ai Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_endpoint_id_here
RUNPOD_BASE_URL=https://api.runpod.ai/v2
RUNPOD_TIMEOUT=300
RUNPOD_MAX_RETRIES=3
RUNPOD_RETRY_DELAY=2 
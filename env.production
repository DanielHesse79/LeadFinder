# Logging
LOG_FILE=leadfinder.log

# Performance
REQUEST_POOL_SIZE=20
REQUEST_TIMEOUT=30
MAX_TEXT_LENGTH=2000

# Export settings
EXPORT_FOLDER=exports
SCIHUB_FOLDER=scihub_pdfs 